* 
    -webkit-box-sizing: border-box
    -moz-box-sizing: border-box
    box-sizing: border-box

html
    background: #fff
      
body
    overflow-y: scroll
    
img 
    max-width: 100%
    height: auto
    
.container
    font-size: 20px
    color: #444
    position: relative
    max-width: max-width
    margin: 0 auto
    
.expand-transition
    position: absolute
    width: 100%
    left: 0
    transition: all 0.4s ease
    padding: 20px
    overflow: hidden
    
.expand-enter
    transform: scale(0.97, 0.97)
    opacity: 0

.expand-leave 
    transform: scale(1.03, 1.03)
    opacity: 0